@{
    ViewBag.Title = "Login";
}
<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>

    <p>Please select login button to login</p>

    <button id="externalButton">Login</button>

    @*@Latest_Okta_Prototype.Okta_Login.GetLoginUri()*@

    @{ 
        string CustomLoginURL = Latest_Okta_Prototype.Okta_Login.GetLoginURI();
    }

    <script>
        document.getElementById("externalButton").addEventListener("click", function () {
            window.location.href = CustomLoginURL; //"https://statecasandbox.okta.com"; // Redirect to Okta here
        });
    </script>
</main>


